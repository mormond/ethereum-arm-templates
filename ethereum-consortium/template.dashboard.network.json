{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "location of resources"
      }
    },
    "securityRules": {
      "type": "array",
      "defaultValue": []
    },
    "namingInfix": {
      "type": "string"
    },
    "contentRoot": {
      "type": "string"
    }
  },
  "variables": {
    "resourceLocation": "[parameters('location')]",
    "contentRoot": "[parameters('contentRoot')]",
    "namingInfix": "[parameters('namingInfix')]",
    "networkName": "[concat(variables('namingInfix'), '.Network')]",
    "defaultSecurityRules": [
      {
        "name": "allow-ssh",
        "properties": {
          "protocol": "Tcp",
          "sourcePortRange": "*",
          "destinationPortRange": "22",
          "sourceAddressPrefix": "Internet",
          "destinationAddressPrefix": "*",
          "access": "Allow",
          "priority": 100,
          "direction": "Inbound"
        }
      }
    ],
    "loadBalancerName": "[concat(variables('namingInfix'), '-lb')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "[variables('networkName')]",
      "apiVersion": "2015-01-01",
      "properties": {
        "templateLink": {
          "contentVersion": "1.0.0.0",
          "uri": "[concat(parameters('contentRoot'), '/utilityTemplates/template.network.json')]"
        },
        "mode": "Incremental",
        "parameters": {
          "namingInfix": {
            "value": "[variables('namingInfix')]"
          },
          "location": {
            "value": "[variables('resourceLocation')]"
          },
          "subnets": {
            "value": [
              {
                "name": "dashboard",
                "prefix": "10.0.0.0/24",
                "rules": "[concat(variables('defaultSecurityRules'), parameters('securityRules'))]"
              }
            ]
          },
          "contentRoot": {
            "value": "[variables('contentRoot')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "[variables('loadBalancerName')]",
      "apiVersion": "2015-01-01",
      "properties": {
        "templateLink": {
          "contentVersion": "1.0.0.0",
          "uri": "[concat(parameters('contentRoot'), '/utilityTemplates/template.network.loadBalancer.json')]"
        },
        "mode": "Incremental",
        "parameters": {
          "namingInfix": {
            "value": "[variables('namingInfix')]"
          },
          "location": {
            "value": "[variables('resourceLocation')]"
          },
          "rules": {
            "value": [
              {
                "name": "SSH",
                "frontendPort": 22,
                "backendPort": 22,
                "protocol": "Tcp"
              },
              {
                "name": "Dashboard",
                "frontendPort": 3000,
                "backendPort": 3000,
                "protocol": "Tcp"
              },
              {
                "name": "Registrar",
                "frontendPort": 3001,
                "backendPort": 3001,
                "protocol": "Tcp"
              }
            ]
          },
          "contentRoot": {
            "value": "[variables('contentRoot')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "Network": {
      "type": "object",
      "value": {
        "id": "[reference(variables('networkName')).outputs.Network.value.id]",
        "ip": "[reference(variables('loadbalancerName')).outputs.value.ip]",
        "poolId": "[reference(variables('loadbalancerName')).outputs.value.backendPoolId]",
        "subnets": {
          "dashboard": "[reference(variables('networkName')).outputs.Network.value.subnets[0].properties.id]"
        }
      }
    }
  }
}