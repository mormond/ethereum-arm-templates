{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "location of resources"
      }
    },
    "subnets": {
      "type": "array",
      "defaultValue": []
    },
    "exportRules": {
      "type": "array",
      "defaultValue": []
    },
    "namingInfix": {
      "type": "string"
    },
    "contentRoot": {
      "type": "string"
    }
  },
  "variables": {
    "resourceLocation": "[parameters('location')]",
    "contentRoot": "[parameters('contentRoot')]",
    "namingInfix": "[parameters('namingInfix')]",
    "networkName": "[concat(variables('namingInfix'), '.Network')]",
    
    "defaultExportRules": [
      {
        "Name": "SSH",
        "Source": 22,
        "Destination": 22,
        "Protocol": "Tcp"
      }
    ],
    "loadBalancerName": "[concat(variables('namingInfix'), '-lb')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "[variables('networkName')]",
      "apiVersion": "2015-01-01",
      "properties": {
        "templateLink": {
          "contentVersion": "1.0.0.0",
          "uri": "[concat(parameters('contentRoot'), '/utilityTemplates/template.network.json')]"
        },
        "mode": "Incremental",
        "parameters": {
          "namingInfix": {
            "value": "[variables('namingInfix')]"
          },
          "location": {
            "value": "[variables('resourceLocation')]"
          },
          "subnets": {
            "value": "[parameters('subnets')]"
          },
          "contentRoot": {
            "value": "[variables('contentRoot')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "[variables('loadBalancerName')]",
      "apiVersion": "2015-01-01",
      "properties": {
        "templateLink": {
          "contentVersion": "1.0.0.0",
          "uri": "[concat(parameters('contentRoot'), '/utilityTemplates/template.network.loadBalancer.json')]"
        },
        "mode": "Incremental",
        "parameters": {
          "namingInfix": {
            "value": "[variables('namingInfix')]"
          },
          "location": {
            "value": "[variables('resourceLocation')]"
          },
          "rules": {
            "value": "[concat(variables('defaultExportRules'), parameters('exportRules'))]"
          },
          "contentRoot": {
            "value": "[variables('contentRoot')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "Network": {
      "type": "object",
      "value": {
        "id": "[reference(variables('networkName')).outputs.Result.value.id]",
        "ip": "[reference(variables('loadbalancerName')).outputs.LoadBalancer.value.ip]",
        "poolId": "[reference(variables('loadbalancerName')).outputs.LoadBalancer.value.backendPoolId]",
        "subnets": "[reference(variables('networkName')).outputs.Result.value.network.subnets]"
      }
    }
  }
}